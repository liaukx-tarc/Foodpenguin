<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xhpp.foodpenguin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_penguin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_penguin_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.login.LoginActivity" />

        <activity android:name=".ui.forgetPassword.ForgetPassword" />

        <activity android:name=".ui.register.RegisterActivity" />

        <activity android:name=".ui.checkout.CheckoutActivity"/>

        <activity android:name=".ui.food_info.FoodInfoActivity" />

    </application>

</manifest>